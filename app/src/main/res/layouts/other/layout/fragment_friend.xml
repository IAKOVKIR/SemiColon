<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".FriendFragment">

    <data>
        <variable
                name="friendFragmentViewModel"
                type="com.example.semicolon.following_followers.view_models.FriendFragmentViewModel" />
    </data>

    <LinearLayout
            android:id="@+id/main_frag"
            android:orientation="vertical"
            android:background="@drawable/blue_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/gradient_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/back_button"
                    android:src="@drawable/heh"
                    android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription,RtlSymmetry" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/circleImageView"
                        android:src="@{friendFragmentViewModel.bitmapDrawable}"
                        android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/name"
                    android:text="@{friendFragmentViewModel.user.username}"
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:textSize="19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/circleImageView"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/follow_un_follow_button"
                    android:text="@{friendFragmentViewModel.followUnFollowText}"
                    android:textSize="15sp"
                    android:textColor="@color/WHITE"
                    android:background="@drawable/reg_square"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintStart_toEndOf="@+id/circleImageView" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/followed_by"
                android:text="@{friendFragmentViewModel.followedByLine}"
                android:textSize="15sp"
                android:textColor="@color/WHITE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="4dp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gray_red">

            <LinearLayout
                android:id="@+id/linear_layout_followers"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/followers_word"
                    android:text="@string/word_followers"
                    android:textSize="16sp"
                    android:textColor="@color/BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/followers_number"
                    android:text="@{String.valueOf(friendFragmentViewModel.followers)}"
                    android:textSize="20sp"
                    android:textColor="@color/BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_following"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/linear_layout_events"
                app:layout_constraintStart_toEndOf="@+id/linear_layout_followers"
                app:layout_constraintBottom_toBottomOf="parent">

                <TextView
                    android:id="@+id/following_word"
                    android:text="@string/word_following"
                    android:textSize="16sp"
                    android:textColor="@color/BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/following_number"
                    android:text="@{String.valueOf(friendFragmentViewModel.following)}"
                    android:textSize="20sp"
                    android:textColor="@color/BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp" />

            </LinearLayout>

        <LinearLayout
                android:id="@+id/linear_layout_events"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                    android:id="@+id/textView5"
                    android:text="@string/word_events"
                    android:textSize="16sp"
                    android:textColor="@color/BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

            <TextView
                    android:id="@+id/textView7"
                    android:text="@string/number_zero"
                    android:textSize="20sp"
                    android:textColor="@color/BLACK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="14dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/smart_phone"
                    tools:ignore="ContentDescription"/>

            <TextView
                    android:id="@+id/phone_number"
                    android:textSize="16sp"
                    android:textColor="@color/WHITE"
                    android:text="@{friendFragmentViewModel.phoneNumber}"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                tools:ignore="UseCompoundDrawables">

            <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/envelope"
                    android:contentDescription="email icon"
                    tools:ignore="HardcodedText" />

            <TextView
                    android:id="@+id/email"
                    android:textSize="16sp"
                    android:textColor="@color/WHITE"
                    android:text="@{friendFragmentViewModel.user.email}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="8dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</layout>