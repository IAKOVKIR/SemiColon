<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/BLACK"
        tools:context=".Login">

    <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:backgroundTint="@color/WHITE"
            android:textColorHint="#CAC2C2"
            android:textColor="@color/WHITE"
            android:textCursorDrawable="@drawable/black_cursor"
            android:textSize="22sp"
            android:ems="10"
            android:id="@+id/fName"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:hint="@string/enter_your_email_or_username"
            app:layout_constraintVertical_bias="0.317"
            tools:ignore="Autofill"/>

    <Button
            android:text="@string/create_an_account"
            android:background="@drawable/reg_square"
            android:textColor="@color/WHITE"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:id="@+id/createBut"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="@string/sign_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_square"
            android:textColor="@color/WHITE"
            android:textSize="22sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/logBut"
            app:layout_constraintEnd_toStartOf="@+id/forgotBut"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.529"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/checkLogin"/>

    <Button
            android:text="@string/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/reg_square"
            android:textColor="@color/WHITE"
            android:textSize="22sp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:id="@+id/forgotBut"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/checkLogin"/>

    <TextView
            android:text="@string/not_registered_yet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="22sp"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/createBut"/>

    <EditText
            android:layout_width="322dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/black_cursor"
            android:backgroundTint="@color/WHITE"
            android:textColorHint="#CAC2C2"
            android:textColor="@color/WHITE"
            android:textSize="22sp"
            android:ems="10"
            android:id="@+id/lName"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/fName"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            android:hint="@string/enter_your_password"
            tools:ignore="Autofill"/>

    <CheckBox
            android:text="@string/remember_me"
            android:textColor="@color/WHITE"
            android:textSize="22sp"
            android:buttonTint="@color/WHITE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/checkLogin"
            android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/lName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="44dp"/>

</android.support.constraint.ConstraintLayout>