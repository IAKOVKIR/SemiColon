<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@drawable/gray_red"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageView
                android:id="@+id/back_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/heh"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription,RtlSymmetry" />

        <!--<ImageButton
                android:id="@+id/back_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                android:background="@drawable/left_arrow"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="ContentDescription,RtlSymmetry" />-->

        <TextView
                android:id="@+id/requests_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REQUESTS"
                android:textSize="20sp"
                android:textColor="@color/BLACK"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.ConstraintLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list"
            android:name="com.example.semicolon.ListRequests"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="LinearLayoutManager"
            tools:context=".following_followers.RequestsActivity"
            tools:listitem="@layout/followers_requests_friends_requests"
            android:paddingBottom="45dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"/>

</androidx.constraintlayout.ConstraintLayout>